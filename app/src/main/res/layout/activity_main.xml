<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".MainActivity"
            android:orientation="vertical"
            android:id="@+id/BaseLayout">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/ic_back"
                android:layout_marginTop="30dp"
                android:layout_marginStart="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="50dp">
                <Button
                    android:id="@+id/b1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/on"
                    android:layout_margin="2dp"/>
                <Button
                    android:id="@+id/b2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/tw"
                    android:layout_margin="2dp"/>
                <Button
                    android:id="@+id/b3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/thr"
                    android:layout_margin="2dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/b4"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/fo"
                    android:layout_margin="2dp"/>
                <Button
                    android:id="@+id/b5"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/fi"/>
                <Button
                    android:id="@+id/b6"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/si"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/b7"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/se"/>
                <Button
                    android:id="@+id/b8"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/ei"/>
                <Button
                    android:id="@+id/b9"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/ni"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="5dp">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="RESET"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_btn"
                    android:id="@+id/btnRestart"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="16sp"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="START"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_btn"
                    android:id="@+id/btn_start"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_control"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="5dp"
                android:visibility="gone">
                <Button
                    android:id="@+id/btnPref"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_btn"
                    android:text="Prev"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="16sp"/>

                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_btn"
                    android:text="Next"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="16sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvlangkahke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_gravity="center"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tvtLangkah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/idProses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>
    </ScrollView>

</layout>
